<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd" name="singular"
    xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
     <requiredProperties>
     <requiredProperty key="moduleStringIDName">
      <defaultValue>
        ${artifactId.replaceAll("[^a-zA-Z]","").toUpperCase()}
      </defaultValue>
    </requiredProperty>
    <requiredProperty key="modulePrefixName">
      <defaultValue>
        ${artifactId.replaceAll("[^a-zA-Z]","").toLowerCase()}
      </defaultValue>
    </requiredProperty>
    <requiredProperty key="moduleClassNamePrefix">
      <defaultValue>
        ${artifactId.replace("[^a-zA-Z]","").substring(0,1).toUpperCase()}${artifactId.replaceAll("[^a-zA-Z]","").substring(1)}
      </defaultValue>
    </requiredProperty>
  </requiredProperties>  
  <modules>
    <module id="${rootArtifactId}-server" dir="__rootArtifactId__-server" name="${rootArtifactId}-server">
      <fileSets>
        <fileSet filtered="true" packaged="true" encoding="UTF-8">
          <directory>src/main/java</directory>
          <includes>
            <include>**/*.java</include>
          </includes>
        </fileSet>
        <fileSet filtered="true" encoding="UTF-8">
          <directory>src/main/resources</directory>
          <includes>
            <include>**/*.properties</include>
          </includes>
        </fileSet>
        <fileSet filtered="true" encoding="UTF-8">
          <directory>src/main/webapp</directory>
          <includes>
            <include>**/*.xml</include>
            <include>**/*.html</include>
          </includes>
        </fileSet>        
      </fileSets>
    </module>
    <module id="${rootArtifactId}-static-resources" dir="__rootArtifactId__-static-resources" name="${rootArtifactId}-static-resources">
      <fileSets>
        <fileSet encoding="UTF-8">
          <directory>src/main/webapp</directory>
          <includes>
            <include>**/*.png</include>
          </includes>
        </fileSet>
      </fileSets>
    </module>
    <module id="${rootArtifactId}-sso-analysis" dir="__rootArtifactId__-sso-analysis" name="${rootArtifactId}-sso-analysis">
      <fileSets>
        <fileSet encoding="UTF-8">
          <directory>src/main/webapp</directory>
          <includes>
            <include>**/*.gitkeep</include>
          </includes>
        </fileSet>        
      </fileSets>
    </module>
    <module id="${rootArtifactId}-sso-requirement" dir="__rootArtifactId__-sso-requirement" name="${rootArtifactId}-sso-requirement">
      <fileSets>
        <fileSet encoding="UTF-8">
          <directory>src/main/webapp</directory>
          <includes>
            <include>**/*.gitkeep</include>
          </includes>
        </fileSet>              
      </fileSets>
    </module>
    <module id="${rootArtifactId}-module" dir="__rootArtifactId__-module" name="${rootArtifactId}-module">
      <fileSets>
        <fileSet filtered="true" packaged="true" encoding="UTF-8">
          <directory>src/main/java</directory>
          <includes>
            <include>**/*.java</include>
          </includes>
        </fileSet>
        <fileSet filtered="true" encoding="UTF-8">
          <directory>src/main/resources</directory>
          <includes>
            <include>**/*.properties</include>
            <include>**/*.sql</include>
          </includes>
        </fileSet>
        <fileSet filtered="true" encoding="UTF-8">
          <directory>src/main/webapp</directory>
          <includes>
            <include>**/*.xml</include>
          </includes>
        </fileSet>
      </fileSets>
    </module>
    <module id="dashboard" dir="__rootArtifactId__-dashboard" name="${rootArtifactId}-dashboard">
      <fileSets>
        <fileSet filtered="true" packaged="true" encoding="UTF-8">
          <directory>src/main/java</directory>
          <includes>
            <include>**/*.java</include>
          </includes>
        </fileSet>
        <fileSet filtered="true" encoding="UTF-8">
          <directory>src/main/resources</directory>
          <includes>
            <include>**/*.xml</include>
            <include>**/*.properties</include>
          </includes>
        </fileSet>
        <fileSet filtered="true" encoding="UTF-8">
          <directory>src/main/webapp</directory>
          <includes>
            <include>**/*.xml</include>
          </includes>
        </fileSet>
      </fileSets>
    </module>
  </modules>
</archetype-descriptor>
